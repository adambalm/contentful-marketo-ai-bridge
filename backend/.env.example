# Copy this file to .env.local and fill in your actual values
# The .env.local file is gitignored and safe for real credentials

# FastAPI Configuration
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Contentful CMS Configuration
# Get these from https://app.contentful.com/spaces/[SPACE_ID]/api/keys
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_delivery_api_key
CONTENTFUL_PREVIEW_TOKEN=your_contentful_preview_api_key
CONTENTFUL_MANAGEMENT_TOKEN=your_contentful_management_token

# Marketing Automation Platform Configuration
# Set MARKETING_PLATFORM to "marketo" or "hubspot" or "mock"
MARKETING_PLATFORM="mock"

# Marketo REST API Configuration
MARKETO_CLIENT_ID=your_marketo_client_id
MARKETO_CLIENT_SECRET=your_marketo_client_secret
MARKETO_MUNCHKIN_ID=your_marketo_munchkin_id
MARKETO_BASE_URL=https://your-instance.mktorest.com

# HubSpot API Configuration (Alternative to Marketo)
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_token
HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# AI Provider Configuration
# Set to "openai" for production, "local" for Ollama
AI_PROVIDER="local"
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Vision AI Provider Configuration
# Set to "openai" for GPT-4o vision, "qwen" for local Qwen 2.5VL
VISION_PROVIDER="qwen"

# Security & Rate Limiting
API_RATE_LIMIT=100
JWT_SECRET_KEY=your_random_secret_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
